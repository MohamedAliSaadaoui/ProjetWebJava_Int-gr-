{% extends 'base.html.twig' %}

{% block body %}
<h2>Gestion des utilisateurs</h2>

<form method="get" action="{{ path('admin_users') }}">
    <input type="text" name="search" value="{{ search }}" placeholder="Rechercher par nom ou email" />
    <button type="submit">Rechercher</button>
    <a href="{{ path('admin_users') }}">Réinitialiser</a>
</form>

<table border="1" cellpadding="10">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom d'utilisateur</th>
            <th>Email</th>
            <th>Téléphone</th>
            <th>Adresse</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.numTel }}</td>
                <td>{{ user.adresse }}</td>
                <td>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
                    <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" style="display:inline;" onsubmit="return confirm('Supprimer cet utilisateur ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button type="submit">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="6">Aucun utilisateur trouvé.</td></tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
