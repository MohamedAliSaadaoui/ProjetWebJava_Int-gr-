{% extends 'base_back.html.twig' %}

{% block title %}Admin - All Products{% endblock %}

{% block body %}
<div class="page">
    <div class="page-main">
        <!-- Header Menu Area Start -->
        <div class="header">
            <div class="container-fluid">
                <div class="d-flex mobile-menu-check justify-content-between">
                    <a class="admin-logo" href="#" target="_blank">
                        <img src="{{ asset('assets/BackAssets/admin/images/logo.png') }}" alt="Admin Logo">
                    </a>
                    <div class="menu-toggle-button">
                        <a class="nav-link" href="javascript:;" id="sidebarCollapse">
                            <div class="my-toggl-icon">
                                <span class="bar1"></span>
                                <span class="bar2"></span>
                                <span class="bar3"></span>
                            </div>
                        </a>
                    </div>

                    <div class="right-eliment">
                        <ul class="list">
                            <li class="bell-area">
                                <a class="dropdown-toggle-1" target="_blank" href="#">
                                    <i class="fas fa-globe-americas"></i>
                                </a>
                            </li>
                            <li class="login-profile-area">
                                <a class="dropdown-toggle-1" href="javascript:;">
                                    <div class="user-img">
                                        <img src="{{ asset('assets/BackAssets/admin/images/user.png') }}" alt="Admin">
                                    </div>
                                </a>
                                <div class="dropdown-menu">
                                    <div class="dropdownmenu-wrapper">
                                        <ul>
                                            <li>
                                                <a href="#"><i class="fas fa-user"></i> Profile</a>
                                            </li>
                                            <li>
                                                <a href="#"><i class="fas fa-sign-out-alt"></i> Logout</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- Header Menu Area End -->

        <div class="wrapper">
            <!-- Side Menu Area Start -->
            <nav id="sidebar" class="nav-sidebar">
                <ul class="list-unstyled components" id="accordion">
                    <li>
                        <a href="{{ path('app_admin_dash_board') }}" class="wave-effect"><i class="fa fa-home mr-2"></i>Dashboard</a>
                    </li>
                    <li>
                        <a href="#menu2" class="accordion-toggle wave-effect" data-toggle="collapse" aria-expanded="true">
                            <i class="icofont-cart"></i>Products
                        </a>
                        <ul class="collapse show list-unstyled" id="menu2" data-parent="#accordion">
                            <li>
                                <a href="{{ path('app_admin_add_product') }}"><span>Add New Product</span></a>
                            </li>
                            <li class="active">
                                <a href="{{ path('app_admin_products') }}"><span>All Products</span></a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </nav>
            <!-- Main Content Area Start -->
            <div class="content-area">
                <div class="container-fluid">
                    <div class="d-flex justify-content-between mb-4">
                        <h3>All Products</h3>
                        <a href="{{ path('app_admin_add_product') }}" class="btn btn-primary">
                            <i class="fa fa-plus"></i> Add New Product
                        </a>
                    </div>

                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}

                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Image</th>
                                            <th>Product Name</th>
                                            <th>Category</th>
                                            <th>Condition</th>
                                            <th>Size</th>
                                            <th>Price</th>
                                            <th>Seller Info</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% if products is empty %}
                                            <tr>
                                                <td colspan="9" class="text-center">No products found</td>
                                            </tr>
                                        {% else %}
                                            {% for product in products %}
                                                <tr>
                                                    <td>{{ product.id }}</td>
                                                    <td>
                                                        {% if product.photo %}
                                                            <img src="{{ asset('uploads/products/' ~ product.photo) }}" alt="{{ product.objetAVendre }}" width="50" height="50" class="img-thumbnail">
                                                        {% else %}
                                                            <span class="badge bg-secondary">No Image</span>
                                                        {% endif %}
                                                    </td>
                                                    <td>{{ product.objetAVendre }}</td>
                                                    <td>
                                                        {% if product.genre == 'Homme' %}
                                                            <span class="badge bg-primary">Men</span>
                                                        {% elseif product.genre == 'Femme' %}
                                                            <span class="badge bg-info">Women</span>
                                                        {% elseif product.genre == 'Enfant' %}
                                                            <span class="badge bg-warning">Kids</span>
                                                        {% else %}
                                                            <span class="badge bg-secondary">{{ product.genre }}</span>
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        {% if product.etat == 'Neuf' %}
                                                            <span class="badge bg-success">New</span>
                                                        {% elseif product.etat == 'Utilisé' %}
                                                            <span class="badge bg-warning">Used</span>
                                                        {% else %}
                                                            <span class="badge bg-info">Refurbished</span>
                                                        {% endif %}
                                                    </td>
                                                    <td>{{ product.taille }}</td>
                                                    <td>
                                                        {{ product.prixDeVente|number_format(2, '.', ',') }} €
                                                        {% if product.prixOriginal > product.prixDeVente %}
                                                            <br><small class="text-muted text-decoration-line-through">{{ product.prixOriginal|number_format(2, '.', ',') }} €</small>
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        {{ product.user.username }}<br>
                                                        <small>{{ product.ville }} ({{ product.codePostal }})</small>
                                                    </td>
                                                    <td>
                                                        <div class="btn-group">
                                                            <a href="{{ path('app_admin_edit_product', {'id': product.id}) }}" class="btn btn-sm btn-primary" title="Edit">
                                                                <i class="fa fa-edit"></i>
                                                            </a>
                                                            <form method="POST" action="{{ path('app_admin_delete_product', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this product?');" style="display:inline;">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                                                <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                                                    <i class="fa fa-trash"></i>
                                                                </button>
                                                            </form>
                                                            <button type="button" class="btn btn-sm btn-info product-details" data-id="{{ product.id }}" title="Details">
                                                                <i class="fa fa-eye"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        {% endif %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Main Content Area End -->
        </div>
    </div>
</div>

<!-- Product Details Modal -->
<div class="modal fade" id="productDetailsModal" tabindex="-1" role="dialog" aria-labelledby="productDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productDetailsModalLabel">Product Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="productDetailsContent">
                <!-- Content will be loaded dynamically -->
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    $(document).ready(function() {
        // Initialize DataTable for better table functionality
        $('table').DataTable({
            responsive: true,
            ordering: true,
            searching: true,
            language: {
                search: "_INPUT_",
                searchPlaceholder: "Search products..."
            }
        });
        
        // Product details modal functionality
        $('.product-details').on('click', function() {
            const productId = $(this).data('id');
            $('#productDetailsModal').modal('show');
            // You can implement AJAX to load product details here
            // For now, we'll just show a static message
            $('#productDetailsContent').html('<p class="text-center">Product details for ID: ' + productId + '</p>');
        });
    });
</script>
{% endblock %}