{% extends 'base.html.twig' %}

{% block title %}Créer un Article{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center my-5">Créer un nouvel article</h1>

    {{ form_start(form, {'attr': {'class': 'form-group', 'novalidate': 'novalidate'}}) }}
        <div class="mb-3">
            {{ form_row(form.title, {
                'label': 'Titre de l\'article',
                'attr': {'class': 'form-control'}
            }) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.date, {
                'label': 'Date de l\'article',
                'attr': {'class': 'form-contro'}
            }) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.content, {  
                'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Écrivez votre article ici...'}
            }) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.image, {
                'label': 'Image (URL)',
                'attr': {'class': 'form-control'}
            }) }}
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Enregistrer</button>
        </div>
    {{ form_end(form) }}

    <div class="mt-3 text-center">
        <a href="{{ path('app_blog') }}" class="btn btn-secondary">Retour à la liste des articles</a>
    </div>
</div>
{% endblock %}
