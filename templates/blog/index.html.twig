<div class="col-12 col-lg-8 gs-main-blog-wrapper wow-replaced" data-wow-delay=".1s">
    {# Bouton pour créer un nouvel article #}
    <a href="{{ path('article_new') }}" class="btn btn-primary mb-4">Créer un article</a>

    {# Liste des articles #}
    {% if articles|length > 0 %}
        {% for article in articles %}
            <div class="gs-main-single-blog wow-replaced" data-wow-delay=".1s">
                {# Image de l'article #}
                <div class="left-side-content">
                    <img 
                        class="blog-img" 
                        src="{{ article.image ? asset('uploads/' ~ article.image) : asset('assets/images/1724480495Imagexxxxxpng.png') }}" 
                        alt="{{ article.title|default('Image par défaut') }}"
                    >
                </div>

                {# Contenu de l'article #}
                <div class="right-side-content">
                    <h4>
                        <a class="title" href="{{ path('article_details', {'id': article.id}) }}">
                            {{ article.title }}
                        </a>
                    </h4>
                    <p class="des">
                        {{ article.content|slice(0, 150)|striptags }}...
                    </p>

                    {# Date de publication #}
                    <div class="date-wrapper">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <path d="M8 2V5" stroke="#292D32" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M16 2V5" stroke="#292D32" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M3.5 9.09009H20.5" stroke="#292D32" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M21 8.5V17C21 20 19.5 22 16 22H8C4.5 22 3 20 3 17V8.5C3 5.5 4.5 3.5 8 3.5H16C19.5 3.5 21 5.5 21 8.5Z" stroke="#292D32" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                        <span class="date-text">{{ article.date|date('d M Y') }}</span>
                    </div>

                    {# Lien vers les détails #}
                    <a class="template-btn outlinee-btn" href="{{ path('article_details', {'id': article.id}) }}">
                        En savoir plus
                    </a>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <p class="text-muted">Aucun article disponible pour le moment.</p>
    {% endif %}

    {# Pagination #}
    {% if totalPages > 1 %}
        <nav class="pagination mt-4" aria-label="Navigation de la pagination">
            <ul class="pagination-list">
                {# Bouton Précédent #}
                {% if pageActuelle > 1 %}
                    <li>
                        <a 
                            href="{{ path('app_blog', {'page': pageActuelle - 1}) }}" 
                            class="pagination-link" 
                            aria-label="Page précédente"
                        >Précédent</a>
                    </li>
                {% endif %}

                {# Numéros de page #}
                {% for i in 1..totalPages %}
                    <li>
                        <a 
                            href="{{ path('app_blog', {'page': i}) }}" 
                            class="pagination-link {{ i == pageActuelle ? 'active' : '' }}"
                            aria-label="Page {{ i }}"
                        >{{ i }}</a>
                    </li>
                {% endfor %}

                {# Bouton Suivant #}
                {% if pageActuelle < totalPages %}
                    <li>
                        <a 
                            href="{{ path('app_blog', {'page': pageActuelle + 1}) }}" 
                            class="pagination-link" 
                            aria-label="Page suivante"
                        >Suivant</a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
</div>

