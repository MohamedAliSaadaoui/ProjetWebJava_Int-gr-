    <a href="{{ path('app_demande_index') }}">back to list</a>

    {{ include('demande/_delete_form.html.twig') }}
    
<style>
.form-container {
    max-width: 600px;
    margin: 40px auto;
    padding: 30px;
    background: #ffffff;
    border-radius: 10px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}

.form-group {
    margin-bottom: 10px;
}

label {
    font-weight: bold;
}

.form-control {
    border-radius: 5px;
    border: 1px solid #ddd;
    padding: 10px;
    font-size: 16px;
}

.btn-custom {
    width: 100%;
    padding: 10px;
    background: linear-gradient(45deg, #28a745, #218838);
    color: white;
    font-size: 18px;
    font-weight: bold;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: 0.3s;
}

.btn-custom:hover {
    background: linear-gradient(45deg, #218838, #1e7e34);
}
</style>

{% endblock %}
