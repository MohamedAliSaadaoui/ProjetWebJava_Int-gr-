{% extends 'base.html.twig' %}

{% block title %}Events List{% endblock %}

{% block body %}
<h1>Events List</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>DateEnd</th>
            <th>Location</th>
            <th>Status</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.titre }}</td>
                <td>{{ event.dateDebut|date('Y-m-d H:i')}}</td>
                <td>{{ event.dateFin|date('Y-m-d H:i') }}</td>
                <td>{{ event.categorie }}</td>
                <td>{{ event.lieu }}</td>
                 <td>{{ event.statut }}</td>
                <td>
                    {# <a href="{{ path('event_show', { 'id': event.id }) }}" class="btn btn-primary">View</a> #}
                    {#<a href="{{ path('event_edit', { 'id': event.id }) }}" class="btn btn-warning">Edit</a>"#}
                    <form method="post" action="{{ path('event_edit', { 'id': event.id }) }}" onsubmit="return confirm('Are you sure you want to update this event?');">
    <input type="hidden" name="_token" value="{{ csrf_token('update' ~ event.id) }}">
    <button class="btn btn-primary" type="submit">Update Event</button>
</form>
                   <form method="post" action="{{ path('event_delete', { 'id': event.id }) }}" onsubmit="return confirm('Are you sure you want to delete this event?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
    <button class="btn btn-danger" type="submit">Delete</button>
</form>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No events found</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
