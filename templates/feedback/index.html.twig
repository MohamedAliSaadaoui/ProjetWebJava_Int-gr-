{% extends 'base.html.twig' %}

{% block title %}Feedback index{% endblock %}

{% block body %}
    <h1>Feedback index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdF</th>
                <th>Feedback_text</th>
                <th>AnsweredAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for feedback in feedback %}
            <tr>
                <td>{{ feedback.idF }}</td>
                <td>{{ feedback.feedbackText }}</td>
                <td>{{ feedback.answeredAt ? feedback.answeredAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_feedback_show', {'idF': feedback.idF}) }}">show</a>
                    <a href="{{ path('app_feedback_edit', {'idF': feedback.idF}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_feedback_new') }}">Create new</a>
{% endblock %}
