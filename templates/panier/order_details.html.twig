{% extends 'base.html.twig' %}

{% block title %}Commande #{{ order.id }}{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <div class="card">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">Détails de la commande #{{ order.id }}</h2>
                <span class="badge {% if order.etat == 'confirmed' %}bg-success{% elseif order.etat == 'pending' %}bg-warning text-dark{% elseif order.etat == 'cancelled' %}bg-danger{% elseif order.etat == 'delivered' %}bg-info{% else %}bg-secondary{% endif %} fs-6">
                    {% if order.etat == 'confirmed' %}
                        Confirmée
                    {% elseif order.etat == 'pending' %}
                        En attente
                    {% elseif order.etat == 'cancelled' %}
                        Annulée
                    {% elseif order.etat == 'delivered' %}
                        Livrée
                    {% else %}
                        {{ order.etat }}
                    {% endif %}
                </span>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5 class="mb-3">Informations générales</h5>
                    <p><strong>Date de commande:</strong> {{ order.createdAt|date('d/m/Y H:i') }}</p>
                    <p>
                        <strong>Méthode de paiement:</strong> 
                        {% if order.methodePaiement == 'cash_on_delivery' %}
                            Paiement à la livraison
                        {% else %}
                            Paiement en ligne (Carte bancaire)
                        {% endif %}
                    </p>
                </div>
                
                <div class="col-md-6">
                    <h5 class="mb-3">Adresse de livraison</h5>
                    <address>
                        {{ order.adresseLivraison }}<br>
                        {{ order.codePostalLivraison }} {{ order.villeLivraison }}<br>
                        {{ order.paysLivraison }}
                    </address>
                </div>
            </div>
            
            <h5 class="mb-3">Produits commandés</h5>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th class="text-end">Prix</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for product in order.products %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <h6 class="mb-0">{{ product.objetAVendre }}</h6>
                                            <small class="text-muted">
                                                {{ product.genre }} - {{ product.taille }} - {{ product.couleur }} - {{ product.etat }}
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-end">{{ product.prixDeVente|number_format(2, ',', ' ') }} €</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        {% if order.livraisons|length > 0 %}
                            {% set livraison = order.livraisons|first %}
                            <tr>
                                <td>Livraison ({{ livraison.nom }})</td>
                                <td class="text-end">{{ livraison.tarif|number_format(2, ',', ' ') }} €</td>
                            </tr>
                        {% endif %}
                        <tr class="table-active">
                            <th>Total</th>
                            <th class="text-end">{{ order.totalCommande|number_format(2, ',', ' ') }} €</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            
            {% if order.etat == 'confirmed' or order.etat == 'delivered' %}
                <div class="mt-4 text-center">
                    <a href="{{ path('checkout_invoice', {'id': order.id}) }}" class="btn btn-primary">
                        <i class="fas fa-file-pdf"></i> Télécharger la facture
                    </a>
                </div>
            {% endif %}
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between">
                <a href="{{ path('app_user_orders') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à mes commandes
                </a>
                {% if order.etat == 'pending' %}
                    <form method="post" action="{{ path('app_order_cancel', {'id': order.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir annuler cette commande?');">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-times"></i> Annuler la commande
                        </button>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %} 