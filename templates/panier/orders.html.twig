{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Mes commandes</h1>
    
    {% if orders|length > 0 %}
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>N° Commande</th>
                        <th>Date</th>
                        <th>Statut</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                        <tr>
                            <td>{{ order.id }}</td>
                            <td>{{ order.createdAt|date('d/m/Y H:i') }}</td>
                            <td>
                                {% if order.etat == 'confirmed' %}
                                    <span class="badge bg-success">Confirmée</span>
                                {% elseif order.etat == 'pending' %}
                                    <span class="badge bg-warning text-dark">En attente</span>
                                {% elseif order.etat == 'cancelled' %}
                                    <span class="badge bg-danger">Annulée</span>
                                {% elseif order.etat == 'delivered' %}
                                    <span class="badge bg-info">Livrée</span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ order.etat }}</span>
                                {% endif %}
                            </td>
                            <td>{{ order.totalCommande|number_format(2, ',', ' ') }} €</td>
                            <td>
                                <a href="{{ path('app_order_details', {'id': order.id}) }}" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-eye"></i> Détails
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="text-center py-5">
            <h3>Vous n'avez pas encore passé de commande</h3>
            <p class="mb-4">Découvrez nos produits et commencez votre shopping !</p>
            <a href="{{ path('app_category') }}" class="btn btn-primary">
                Voir les produits
            </a>
        </div>
    {% endif %}
    
    <div class="mt-4">
        <a href="{{ path('app_panier') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Retour au panier
        </a>
    </div>
</div>
{% endblock %}