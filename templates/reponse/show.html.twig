{% extends 'base.html.twig' %}

{% block title %}Reponse{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Reponse Details</h1>

        <div class="card">
            <div class="card-body">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ reponse.id }}</td>
                    </tr>
                    <tr>
                        <th>Reponse</th>
                        <td>{{ reponse.reponse }}</td>
                    </tr>
                    <tr>
                        <th>Date Reponse</th>
                        <td>
                            {% if reponse.dateReponse %}
                                {{ reponse.dateReponse|date('Y-m-d H:i:s') }}
                            {% else %}
                                <span class="text-muted">Not provided</span>
                            {% endif %}
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('app_reponse_index') }}" class="btn btn-secondary">Back to list</a>
            <a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}" class="btn btn-warning">Edit</a>

            {{ include('reponse/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
