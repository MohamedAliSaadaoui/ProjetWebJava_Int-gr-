{% extends 'base.html.twig' %}

{% block title %}Formulaire Utilisateur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-lg p-4" style="max-width: 600px; margin: 0 auto; background-color: #f0f0f0;">
            <h2 class="text-center mb-4" style="color: #3b3b3b;">{{ user.id ? 'Modifier l\'utilisateur' : 'Inscription' }}</h2>

            {{ form_start(form) }}
                
                <div class="form-group mb-3">
                    {{ form_label(form.username, 'Nom d\'utilisateur', {'label_attr': {'class': 'form-label', 'style': 'color: #3b3b3b;'}}) }}
                    {{ form_widget(form.username, {'attr': {'class': 'form-control', 'style': 'background-color: #dcdcdc; color: #3b3b3b;'}}) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label', 'style': 'color: #3b3b3b;'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'style': 'background-color: #dcdcdc; color: #3b3b3b;'}}) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'form-label', 'style': 'color: #3b3b3b;'}}) }}
                    {{ form_widget(form.password, {'attr': {'class': 'form-control', 'style': 'background-color: #dcdcdc; color: #3b3b3b;'}}) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.num_tel, 'Numéro de téléphone', {'label_attr': {'class': 'form-label', 'style': 'color: #3b3b3b;'}}) }}
                    {{ form_widget(form.num_tel, {'attr': {'class': 'form-control', 'style': 'background-color: #dcdcdc; color: #3b3b3b;'}}) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.adresse, 'Adresse', {'label_attr': {'class': 'form-label', 'style': 'color: #3b3b3b;'}}) }}
                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'style': 'background-color: #dcdcdc; color: #3b3b3b;'}}) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.date_naiss, 'Date de naissance', {'label_attr': {'class': 'form-label', 'style': 'color: #3b3b3b;'}}) }}
                    {{ form_widget(form.date_naiss, {'attr': {'class': 'form-control', 'style': 'background-color: #dcdcdc; color: #3b3b3b;'}}) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.photo, 'Photo de profil', {'label_attr': {'class': 'form-label', 'style': 'color: #3b3b3b;'}}) }}
                    {{ form_widget(form.photo, {'attr': {'class': 'form-control', 'style': 'background-color: #dcdcdc; color: #3b3b3b;'}}) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.roles, 'Rôles', {'label_attr': {'class': 'form-label', 'style': 'color: #3b3b3b;'}}) }}
                    <div class="form-check form-check-inline">
                        {{ form_widget(form.roles[0], {'attr': {'class': 'form-check-input', 'style': 'background-color: #dcdcdc; color: #3b3b3b;'}}) }}
                        {{ form_label(form.roles[0], 'Utilisateur', {'label_attr': {'class': 'form-check-label'}}) }}
                    </div>
                    <div class="form-check form-check-inline">
                        {{ form_widget(form.roles[1], {'attr': {'class': 'form-check-input', 'style': 'background-color: #dcdcdc; color: #3b3b3b;'}}) }}
                        {{ form_label(form.roles[1], 'Administrateur', {'label_attr': {'class': 'form-check-label'}}) }}
                    </div>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn" style="background-color: #7a9a3b; color: white; width: 100%;">Enregistrer</button>
                </div>
            {{ form_end(form) }}

            <div class="mt-3 text-center">
                <a href="{{ path('app_login') }}" class="text-decoration-none" style="color: #7a9a3b;">Retour à la connexion</a>
            </div>
        </div>
    </div>
{% endblock %}
