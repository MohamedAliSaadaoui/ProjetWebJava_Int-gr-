{% extends 'base.html.twig' %}

{% block title %}Créer un compte - ReWear{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 600px; border: none; border-radius: 12px;">
        <div class="text-center mb-4">
            <h2 class="mb-1" style="color: #4b6f63;">Créer un compte</h2>
            <p class="text-muted">Veuillez remplir les informations suivantes</p>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

            <div class="mb-3">
                {{ form_label(form.username, 'Nom d\'utilisateur', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.username, {'attr': {'class': 'form-control', 'style': 'background-color: #f1f1f1;'}}) }}
                {{ form_errors(form.username) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.email, 'Adresse e-mail', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'style': 'background-color: #f1f1f1;'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.password, {'attr': {'class': 'form-control', 'style': 'background-color: #f1f1f1;'}}) }}
                {{ form_errors(form.password) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.num_tel, 'Numéro de téléphone', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.num_tel, {'attr': {'class': 'form-control', 'style': 'background-color: #f1f1f1;'}}) }}
                {{ form_errors(form.num_tel) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.adresse, 'Adresse', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'style': 'background-color: #f1f1f1;'}}) }}
                {{ form_errors(form.adresse) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.date_naiss, 'Date de naissance', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.date_naiss, {'attr': {'class': 'form-control', 'style': 'background-color: #f1f1f1;'}}) }}
                {{ form_errors(form.date_naiss) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.photoFile, 'Photo de profil', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.photoFile, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.photoFile) }}
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn" style="background-color: #4b6f63; color: white;">Enregistrer</button>
            </div>

        {{ form_end(form) }}

        <div class="text-center mt-2">
            <a href="{{ path('app_login') }}" class="text-decoration-none" style="color: #4b6f63;">Déjà inscrit ? Connectez-vous</a>
        </div>
    </div>
</div>
{% endblock %}
