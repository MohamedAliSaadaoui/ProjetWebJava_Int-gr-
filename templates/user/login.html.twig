{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4" style="width: 400px; background-color: #F5F5DC; border-color: #8B8B72;">
        <h2 class="text-center mb-4 text-dark">Se connecter à ReWear</h2>

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post">
            <div class="mb-3">
                <label for="email" class="form-label text-dark">Email</label>
                <input type="email" id="email" name="_username" class="form-control border-0" style="background-color: #EDEDED;" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label text-dark">Mot de passe</label>
                <input type="password" id="password" name="_password" class="form-control border-0" style="background-color: #EDEDED;" required>
            </div>

            <button type="submit" class="btn w-100" style="background-color: #556B2F; color: white;">Connexion</button>
        </form>

        <div class="mt-3 text-center">
            <a href="#" class="text-dark">Mot de passe oublié ?</a>
        </div>

        <div class="d-flex align-items-center my-3">
            <hr class="flex-grow-1" style="border-color: #8B8B72;">
            <span class="mx-2 text-muted">OU</span>
            <hr class="flex-grow-1" style="border-color: #8B8B72;">
        </div>

        <div class="text-center">
            <a href="{{ path('app_user_new') }}" class="btn w-100" style="background-color: #8B8B72; color: white;">Créer un compte</a>
        </div>
    </div>
</div>
{% endblock %}
