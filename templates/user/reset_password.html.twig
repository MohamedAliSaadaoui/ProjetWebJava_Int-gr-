{# templates/user/reset_password.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <h1>Réinitialisation du mot de passe</h1>
        
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        
        <p>Veuillez entrer votre adresse email pour recevoir un lien de réinitialisation.</p>
        
        {{ form_start(form) }}
            {{ form_row(form.email) }}
            <button type="submit" class="btn btn-primary">Envoyer le lien</button>
        {{ form_end(form) }}
        
        <p><a href="{{ path('app_login') }}">Retour à la connexion</a></p>
    </div>
{% endblock %}