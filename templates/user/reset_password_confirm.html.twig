{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="container" style="max-width: 500px; margin: auto; background-color: #F5F5DC; padding: 20px; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
        <h2 class="text-center" style="color: #556B2F; margin-bottom: 20px;">Réinitialiser votre mot de passe</h2>

        {# Affichage des messages de succès ou d'erreur #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}
        
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.password, 'Nouveau mot de passe', {'label_attr': {'style': 'color: #556B2F; font-weight: bold;'}}) }}
                {{ form_widget(form.password, {'attr': {'class': 'form-control', 'style': 'border: 1px solid #556B2F;'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.passwordConfirm, 'Confirmer le mot de passe', {'label_attr': {'style': 'color: #556B2F; font-weight: bold;'}}) }}
                {{ form_widget(form.passwordConfirm, {'attr': {'class': 'form-control', 'style': 'border: 1px solid #556B2F;'}}) }}
            </div>

            <button type="submit" class="btn" style="background-color: #556B2F; color: white; width: 100%; padding: 10px; border: none; border-radius: 5px;">
                Sauvegarder le nouveau mot de passe
            </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
