{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-lg p-4" style="max-width: 600px; margin: 0 auto; background-color: #f0f0f0;">
            <h2 class="text-center mb-4" style="color: #3b3b3b;">Réinitialiser votre mot de passe</h2>

            {{ form_start(form) }}
                
                <div class="form-group mb-3">
                    {{ form_label(form.identifier, 'Email ou Numéro de téléphone', {'label_attr': {'class': 'form-label', 'style': 'color: #3b3b3b;'}}) }}
                    {{ form_widget(form.identifier, {'attr': {'class': 'form-control', 'style': 'background-color: #dcdcdc; color: #3b3b3b;'}}) }}
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn" style="background-color: #7a9a3b; color: white; width: 100%;">Envoyer le code</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
